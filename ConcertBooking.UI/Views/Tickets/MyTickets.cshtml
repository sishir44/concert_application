@model IEnumerable<BookingViewModel>

@if (Model == null)
{
    <div class="alert alert-warning col-6" style="margin-top:5rem;">
        You have no ticket booked.
    </div>
}
else
{
    <div class="col-12" style="margin-top:5rem;"></div>
    <div class="row">
        @foreach (var booking in Model)
        {
            <div class="card mb-4 col-3" id="booking-@booking.BookingId">
                <div class="card-header">
                    Booking ID: @booking.BookingId - Date: @booking.BookingDate.ToString("dd/MM/yyyy")
                </div>

                <div class="card-body">
                    <h5 class="card-title">Concert: @booking.ConcertName</h5>
                    <ul class="list-group">
                        @foreach (var ticket in booking.Tickets)
                        {
                            <li class="list-group-item">Seat Number: @ticket.SeatNumber</li>
                        }
                    </ul>
                </div>

                <div class="card-footer">
                    <button class="btn btn-primary" onclick="printTicket('@booking.BookingId')">
                        Print Ticket
                    </button>
                </div>
            </div>
        }
    </div>
}