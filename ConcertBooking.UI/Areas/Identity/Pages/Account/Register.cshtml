@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row colorBlack">
        <div class="col-12" style="margin-top: 4rem;">
            <h2>Create a new account.</h2>
        </div>
        @* <hr hidden /> *@
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="FirstName" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <textarea asp-for="Input.Address" class="form-control" aria-required="true"></textarea>
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Phone" class="form-control" placeholder="Phone" />
                <label asp-for="Input.Phone">Phone</label>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Pincode" class="form-control" placeholder="Pincode" />
                <label asp-for="Input.Pincode">Pincode</label>
                <span asp-validation-for="Input.Pincode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
